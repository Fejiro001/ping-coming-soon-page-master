{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "files": ["./src/script.js"],
  "rules": {
    "quotes": ["error", "double"],
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "variables": true
      }
    ]
  }
}

